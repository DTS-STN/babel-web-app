@model AllSimulationsViewModel;
@{
    var TextSet = Model.TextSet;
    var Response = Model.Response;
}

<div>
    <h4>@TextSet.Get("admin_title")</h4>
    <div class="row">
        <table class="table" id="admin-table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">@TextSet.Get("name_column")</th>
                    <th scope="col">Date</th>
                    @if (ViewBag.IsAdmin) {
                        <th>Delete</th>
                    }
                    
                </tr>
            </thead>
            <tbody>

                @foreach (var sim in Response.Simulations) {
                    <tr>
                        <td>
                            <a asp-controller="MaternityBenefits" asp-action="Results" asp-route-id="@sim.Id">@sim.Id</a>
                        </td>
                        <td>
                            @sim.SimulationName
                        </td>
                        <td>
                            @sim.DateCreated
                        </td>
                        @if (ViewBag.IsAdmin) {
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@sim.Id">Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>