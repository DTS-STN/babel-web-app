@model IndexViewModel

@{
    var TextSet = Model.TextSet;
}

<h1>@TextSet.Get("title")</h1>
<p>@TextSet.Get("info")</p>

<div class="panel" id="content">
    <div class="row">
        <div class="col-md col-sm-auto">
        <h2>@TextSet.Get("test_title")</h2>
            <p>@TextSet.Get("test_info1")</p>
            <p>@TextSet.Get("test_info2")</p>
            <p><a asp-controller="MaternityBenefits" asp-action="Form"  class="btn btn-primary">@TextSet.Get("test_button_text")</a></p>
        </div> 
        <div class="col-md col-sm-auto">
            <img src="~/img/splash-image.png" alt="illustration of two people looking at a set of charts and graphs"/>
        </div>
</div>

